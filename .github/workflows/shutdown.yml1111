name: Shutdown Railway

on:
  workflow_dispatch: # Ð·Ð°Ð¿ÑƒÑÐº Ð²Ñ€ÑƒÑ‡Ð½Ñƒ
  schedule:
    - cron: "0 21 * * *" # Ñ‰Ð¾Ð´Ð½Ñ Ð¾ 00:00 Ð·Ð° ÐšÐ¸Ñ”Ð²Ð¾Ð¼ (21:00 UTC)

jobs:
  shutdown:
    runs-on: ubuntu-latest
    steps:
      - name: ðŸšš Checkout repo
        uses: actions/checkout@v3

      - name: ðŸ“¦ Install Node.js
        uses: actions/setup-node@v3
        with:
          node-version: 18

      - name: ðŸ§ª Install Railway CLI
        run: curl -fsSL https://railway.app/install.sh | sh

      - name: ðŸ”‘ Set Railway Token
        run: echo "RAILWAY_TOKEN=${{ secrets.RAILWAY_TOKEN }}" >> $GITHUB_ENV

      - name: ðŸ›‘ Run shutdown script
        run: node scripts/shutdown.js
        env:
          RAILWAY_TOKEN: ${{ secrets.RAILWAY_TOKEN }}
